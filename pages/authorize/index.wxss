page{
  background: #fff;
}
.logo-text-wrap{
  width: 100%;
  height: 414rpx;
  position: relative;
}
.logo-text-wrap .sheet{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
}
.logo-text-wrap .lt{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  width: 377rpx;
  height: 48rpx;
}

.auth-button{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.switch-account{
  margin-top: 30rpx;
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #000000;
  text-align: center;
}
.account-form{
  width: 600rpx;
  margin: 20rpx auto 0;
}

.modal-wrapper .mw-inner .content{
  width: 100%;
  margin: 50rpx 0;
}
.modal-wrapper .mw-inner .content .input-row{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.modal-wrapper .mw-inner .content input{
  display: block;
  flex: 1;
  height: 88rpx;
  background: #f6f7fb;
  border: 1rpx solid #e8ebf3;
  padding: 0 10rpx;
  margin-left: 20rpx;
  box-sizing: border-box;
}
.modal-wrapper .footer{
  justify-content: center !important;
}